{
    "version": "0.1",
    "target": "ukma-xx-xx-xxxx",

    "spaces" : [
        { "name" : "boot" },   
        { "name" : "services" },
        { "name" : "reboot" }  
    ],

    "capps": [
        {
            "name"   : "node",
            "tag"    : "latest",
            "restart": "yes",
            "space"  : "boot"
        },
        {
            "name"    : "bootstrap",
            "tag"     : "latest",
            "restart" : "yes",
            "space"   : "boot",
            "depends_on" : [
                {
                    "capp" : "node",
                    "state" : "run"
                }
            ]
        },
        {
            "name"   : "mesh.d",
            "tag"    : "latest",
            "restart": "yes",
            "space"  : "boot",
            "depends_on" : [
                {
                    "capp"  : "bootstrap",
                    "state" : "done"
                } 
            ]
        }
    ]
}
