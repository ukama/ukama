{
 "name": "upt-subgraph",
 "description": "Ukama Planning Tool Subgraph",
 "private": true,
 "engines": {
  "node": ">=18.0"
 },
 "scripts": {
  "build": "tsc",
  "seed": "prisma db seed",
  "start": "ts-node src/index.ts",
  "migrate": "prisma migrate dev",
  "prettier-format": "prettier --write --config .prettierrc './src/**'",
  "dev": "ts-node-dev --no-notify --respawn --transpile-only src/index.ts"
 },
 "dependencies": {
  "@apollo/server": "^4.7.2",
  "@apollo/subgraph": "^2.4.7",
  "@prisma/client": "4.15.0",
  "class-validator": "0.14.0",
  "graphql": "latest",
  "graphql-scalars": "1.22.1",
  "graphql-tag": "^2.12.6",
  "reflect-metadata": "0.1.13",
  "type-graphql": "2.0.0-beta.2"
 },
 "devDependencies": {
  "@types/node": "20.2.5",
  "@types/ws": "8.5.4",
  "prettier": "^2.8.8",
  "prisma": "4.15.0",
  "ts-node": "10.9.1",
  "ts-node-dev": "2.0.0",
  "typescript": "5.1.3",
  "eslint-config-prettier": "^8.3.0",
  "eslint-plugin-prettier": "^3.4.0"
 },
 "prisma": {
  "seed": "ts-node prisma/seed.ts"
 },
 "husky": {
    "hooks": {
      "pre-commit": "yarn prettier-format && yarn lint"
    }
  }
}
