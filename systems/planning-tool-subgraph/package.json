{
    "name": "upt-subgraph",
    "private": true,
    "description": "Ukama Planning Tool Subgraph",
    "engines": {
        "node": ">=18.0"
    },
    "scripts": {
        "build": "npm run codegen && tsc",
        "codegen": "graphql-codegen",
        "postinstall": "npm run build",
        "start": "node dist/index.js",
        "dev": "nodemon --watch \"src/**\" --ext \"ts,json,graphql\" --exec \"npm run build && npm run start\" --ignore ./src/__generated__/ --ignore ./src/datasources/BarAPI.ts",
        "test": "jest"
    },
    "dependencies": {
        "@apollo/server": "^4.7.2",
        "@apollo/subgraph": "^2.4.7",
        "graphql": "latest",
        "graphql-tag": "latest"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^4.0.1",
        "@graphql-codegen/typescript": "^4.0.0",
        "@graphql-codegen/typescript-resolvers": "^4.0.0",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.2.5",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "src"
        ],
        "globals": {
            "ts-jest": {
                "testRegext": "/__tests__/.*.test.ts",
                "verbose": true
            }
        }
    }
}
