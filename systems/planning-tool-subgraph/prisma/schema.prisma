generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AP_OPTIONS {
  ONE_TO_ONE
  ONE_TO_TWO
}

model Location {
  id      Int    @id @default(autoincrement())
  lat     String
  lng     String
  address String
  Site    Site[]
}

model Site {
  id          Int        @id @default(autoincrement())
  name        String
  height      Int
  apOption    AP_OPTIONS @default(ONE_TO_ONE)
  solarUptime Int
  isSetlite   Boolean
  location    Location   @relation(fields: [locationId], references: [id])
  Draft       Draft[]
  locationId  Int
}

model Event {
  id        Int    @id @default(autoincrement())
  operation String
  value     String
  Draft     Draft? @relation(fields: [draftId], references: [id])
  draftId   Int?
}

model Draft {
  id        Int     @id @default(autoincrement())
  lastSaved Int
  name      String
  events    Event[]
  siteId    Int
  site      Site    @relation(fields: [siteId], references: [id])
}
