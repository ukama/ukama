        <div class="invoice-title">
          <h1>INVOICE</h1>
          <div>Invoice #: {{ .RawReport.Number }}</div>
          <div>Date: {{ .RawReport.IssuingDate }}</div>
        </div>
      </div>      <div class="invoice-details">
        <div class="bill-to">
          <h3>Bill To</h3>
          <div>{{ .RawReport.Customer.Name }}</div>
          <div>{{ .RawReport.Customer.AddressLine1 }}</div>
          <div>
            {{if .RawReport.Customer.City}}
              {{ .RawReport.Customer.City }} 
            {{end}}
            {{ if .RawReport.Customer.State }}
                , {{ .RawReport.Customer.State }} {{ .RawReport.Customer.Zipcode }}
            {{end}}
          </div>
          <div>{{ .RawReport.Customer.Country }}</div>
          <div>Phone: {{ .RawReport.Customer.Phone }}</div>
        </div>
        {{ if .IsPaid  }}
        <div class="payment-info">
          <h3>Payment Information</h3>
          <div>Method: Credit Card</div>
          <div>Type: Visa</div>
          {{/*
          <div>Transaction ID: {{ .TransactionId }}</div>
          */}}
        </div>
        {{ end }}
      </div>      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Description</th>
              <th>SKU</th>
              <th>Units</th>
              <th class="text-right">Amount</th>
            </tr>
          </thead>
          <tbody>
            {{ range .RawReport.Fees }}
            <tr>
              <td>{{ .Item.Name }}</td>
              <td>{{ .Item.Code }}</td>
              <td>{{ .Units }}</td>
              <td class="text-right">
                {{ .TotalAmountCurrency }} {{ formatAmount .AmountCents }}
              </td>
            </tr>
            {{ end }}
          </tbody>
        </table>
      </div>      <div class="totals">
        <div class="totals-row">
          <span>Subtotal</span>
          <span>{{ .RawReport.Currency }} {{formatAmount  .RawReport.SubTotalExcludingTaxesAmountCents }}</span>
        </div>
        <div class="totals-row">
          <span>Tax</span>
          <span>{{ .RawReport.Currency }} {{formatAmount  .RawReport.TaxesAmountCents }}</span>
        </div>
        <div class="totals-row grand-total">
          <span>Total</span>
          <span>{{ .RawReport.Currency }} {{formatAmount  .RawReport.TotalAmountCents }}</span>
        </div>
      </div>      <div class="footer">
        <p>Thank you for your business!</p>
        {{/*
        {{ if .PaymentTerms }}
        <p>Payment Terms: {{ .PaymentTerms }}</p>
        {{ end }}
        */}}
      </div>
    </div>
